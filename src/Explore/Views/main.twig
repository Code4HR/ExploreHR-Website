{# main.twig #}

{% use 'mainHead.twig' %}
{% use 'header.twig' %}
{% use 'bootstrapCore.twig' %}

<!DOCTYPE html>
<html lang='en'>
<head>
    {{ block('bootstrapCore')}}
    {{ block('mainHead')}}
</head>
<body>
    {{ block('header')}}
    
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div id='myCarousel' class='carousel slide' data-ride='carousel'>
        <!-- Indicators -->
        
        <div class='carousel-inner' role='listbox'>
            <div class='item active'>
                <img src='images/norfolk.png' alt='First slide' />
                <div class='container'>
                    <div class='carousel-caption'>
                        <p><a class='btn btn-lg btn-primary' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Hampton Roads</a></p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class='container'>
            <div class='row'>
                <div class='col-md-12 text-center'>
                    <h1 id='crime'>Are you ready to Explore Hampton Roads?</h1>
                    <p>Hampton Roads is a robust community made up of multiple cities in South Eastern Virginia. With over 1.7 million people living within  
                        it's borders, and over 400 years of history, Hampton Roads offers a rich culture to live, work or visit. Explore more about Hampton 
                        Roads now!</p>
                    <ul class='nav nav-pills'>
                        <li role='presentation'><a href='http://www.cityofchesapeake.net/' target='_blank'>Chesapeake</a></li>
                        <li role='presentation'><a href='http://hampton.gov/' target='_blank'>Hampton</a></li>
                        <li role='presentation'><a href='https://www.nnva.gov/' target='_blank'>Newport News</a></li>
                        <li role='presentation'><a href='http://www.norfolk.gov/' target='_blank'>Norfolk</a></li>
                        <li role='presentation'><a href='http://www.ci.poquoson.va.us/' target='_blank'>Poquoson</a></li>
                        <li role='presentation'><a href='http://www.portsmouthva.gov/' target='_blank'>Portsmouth</a></li>
                        <li role='presentation'><a href='http://www.suffolkva.us/' target='_blank'>Suffolk</a></li>
                        <li role='presentation'><a href='http://www.vbgov.com/Pages/home.aspx' target='_blank'>Virginia Beach</a></li>
                        <li role='presentation'><a href='http://www.williamsburgva.gov/' target='_blank'>Williamsburg</a></li>
                    </ul>
                </div>
            </div>
                
            <div class='clearfix'></div>
            
            <div class='row'>
                <div class='col-md-12 text-center'>
                    <h1>Explore Crime</h1>
                    <hr />
                </div>
                <div class='col-md-4 col-sm-4 col-xs-12 text-center'>
                    <div class='x_panel'>
                        <div class='x_title'>
                            <h4>Crime Rates by City</h4>
                            <div class='clearfix'></div>
                        </div>
                        <div class='x_content'>
                            <canvas id='canvas_pie'></canvas>
                        </div>
                    </div>
                    <p><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Crime Rates</a></p>
                </div>
                
                <div class='col-md-4 col-sm-4 col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                    <div class='x_panel'>
                        <div class-'x_title'>
                            <h4>About the Data</h4>
                            <div class='clearfix'></div>
                        </div>
                        <div class='x_content'>
                            <p>The current crime information is sourced for the City of Hampton from the Hampton Police Department's 
                            <a src="https://dev.socrata.com/foundry/data.hampton.gov/umc3-tsey">Socrata API</a>. 
                            The information includes a description of the crime, as well as the date, time, and location in which it occurred.</p>
                            <div class='clearfix'></div>
                        </div>
                    </div>
                </div>
                
                <div class='col-md-4 col-sm-4  col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                    <div class='x_panel'>
                        <div class='x_title'>
                            <h4>Income by City</h4>
                            <div class='clearfix'></div>
                        </div>
                        <div class='x_content'>
                            <canvas id='canvas_area'></canvas>
                        </div>
                    </div>
                    <p id='schools'><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Income Levels</a></p>
                </div>
                
            </div>
            <div class='clearfix'></div>
            
            <div class='row'>
                <br /><br /><br />
                <div class='clearfix'></div>
                
                <div class='row' id='schools'>
                    <div class='col-md-12 text-center'>
                        <h1>Explore Schools</h1>
                        <hr />
                    </div>
                    <div class='col-md-4 col-sm-4 col-xs-12 text-center'>
                        <div class='x_panel'>
                            <div class='x_title'>
                                <h4>Income vs. Education</h4>
                                <div class='clearfix'></div>
                            </div>
                            <div class='x_content'>
                                <canvas id='canvas000'></canvas>
                            </div>
                        </div>
                        <p><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Education</a></p>
                    </div>
                    
                    <div class='col-md-4 col-sm-4 col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                        <div class='x_panel'>
                            <div class-'x_title'>
                                <h4>About the Data</h4>
                                <div class='clearfix'></div>
                            </div>
                            <div class='x_content'>
                                <p>Talk about the school data here.</p>
                                <div class='clearfix'></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class='col-md-4 col-sm-4  col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                        <div class='x_panel'>
                            <div class='x_title'>
                                <h4>Population Growth</h4>
                                <div class='clearfix'></div>
                            </div>
                            <div class='x_content'>
                                <canvas id='canvas_bar'></canvas>
                            </div>
                        </div>
                        <p id='other'><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Population</a></p>
                    </div>
                    
                </div>
                <div class='clearfix'></div>
                
                <div class='row'>
                    <br /><br /><br />
                    <div class='clearfix'></div>
                    
                    <div class='row' id='other'>
                        <div class='col-md-12 text-center'>
                            <h1>Explore More</h1>
                            <hr />
                        </div>
                        <div class='col-md-4 col-sm-4 col-xs-12 text-center'>
                            <div class='x_panel'>
                                <div class='x_title'>
                                    <h4>Lifestyle</h4>
                                    <div class='clearfix'></div>
                                </div>
                                <div class='x_content'>
                                    <canvas id='canvas_radar'></canvas>
                                </div>
                            </div>
                            <p><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Lifestyles</a></p>
                        </div>
                        
                        <div class='col-md-4 col-sm-4 col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                            <div class='x_panel'>
                                <div class-'x_title'>
                                    <h4>About the Data</h4>
                                    <div class='clearfix'></div>
                                </div>
                                <div class='x_content'>
                                    <p>Talk about the other data here.</p>
                                    <div class='clearfix'></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class='col-md-4 col-sm-4  col-md-offset-0 col-sm-offset-0 col-xs-12 text-center'>
                            <div class='x_panel'>
                                <div class='x_title'>
                                    <h4>Ethnicity</h4>
                                </div>
                                <div class='x_content'>
                                    <canvas id='canvas_doughnut'></canvas>
                                </div>
                            </div>
                            <p><a class='btn btn-lg btn-default' href='/map' role='button'><i class='glyphicon glyphicon-search'></i> Explore Ethnicity</a></p>
                        </div>
                        
                    </div>
                    <div class='clearfix'></div>
                    
                </div>
                
                <br /><br /><br />
                
                <nav class='navbar-fixed-bottom'>
                    <div class='row background-white'>
                        <ul class='nav nav-tabs'>
                            <li class='presentation'><a href='#crime'><i class='glyphicon glyphicon-eye-open'></i>  Crime</a></li>
                            <li class='presentation'><a href='#schools'><i class='glyphicon glyphicon-apple'></i>  Schools</a></li>
                            <li class='presentation'><a href='#other'><i class='glyphicon glyphicon-usd'></i>  Other</a></li>
                        </ul>
                    </div>
                </nav>
            </div> <!-- /container -->
            
            <script src='/js/main.js'></script>
            {{ block('bootstrapCore')}}
            
        </body>
